<div id="<%= dom_id blog %>">
  <p>
    <strong>Title:</strong>
    <%= blog.title %>
  </p>
  <p>
    <strong>Author:</strong>
    <%= blog.author %>
  </p>
  <p>
    <strong>Content:</strong>
    <%= blog.content %>
  </p>
  <div class="d-flex gap-3 justify-content-start">
    <%= link_to "Edit", edit_blog_path(blog), class: "btn btn-secondary" %>
    <%= link_to "Delete", blog_path(blog), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-secondary" %>
  </div>
  <hr>
</div>
