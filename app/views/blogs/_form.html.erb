<%= form_with(model: blog, data: { controller: "blog-form", blog_form_target: "formContainer" }, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>
      <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="d-flex flex-column align-items-center">
    <div class="form-group mt-4 p-2 w-100">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
    </div>
    <div class="form-group mt-4 p-2 w-100">
      <%= form.label :author, class: 'form-label' %>
      <%= form.text_field :author, class: 'form-control', placeholder: 'Author name' %>
    </div>
    <div class="form-group mt-4 p-2 w-100">
      <%= form.label :content, class: 'form-label' %>
      <%= form.text_area :content, class: 'form-control', placeholder: 'Content', rows: 6 %>
    </div>
    <div class="mt-5">
      <%= form.submit 'Submit', class: 'btn btn-primary btn-lg' %>
      <%= link_to "Back To Blogs", blogs_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
